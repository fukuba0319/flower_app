<div class="row">
 <div class="col-md-4 col-md-offset-2">
  <%= search_form_for @q do |f| %>
    <%= f.label :kind_cont, "お花・植物の名前を検索すると、投稿されているか調べられます。" %>
    <%= f.search_field :kind_cont %>
  
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>  
 </div>
</div>

<div class="row">
  <div class="col-md-offset-2">
   <%= paginate @topics %>
 </div>
</div>

<% @topics.each do |topic| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="topic-index-single">
        <h2 class="topic-author">
          <%= topic.user.name %>
        </h2>
        <%= image_tag topic.image.url %>
        <div class="sub-section">お花・植物の種類</div>
        <p class="topic-text">
          <%= topic.kind %>
        </p>        
        <hr class="bold">
        <p class="topic-text">
          <%= topic.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-offset-2">
   <%= paginate @topics %>
 </div>
</div>
