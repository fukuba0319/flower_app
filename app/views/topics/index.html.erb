<% @topics.each do |topic| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="topic-index-single">
        <h2 class="topic-author">
          <%= topic.user.name %>
        </h2>
        <%= image_tag topic.image.url %>
        <div class="sub-section">お花・植物の種類</div>
        <p class="topic-text">
          <%= topic.kind %>
        </p>        
        <hr class="bold">
        <p class="topic-text">
          <%= topic.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>