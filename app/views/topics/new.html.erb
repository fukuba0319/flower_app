<div class="title">写真投稿フォーム</div>

<div class="center jumbotron">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <%= form_for @topic do |f| %>
       <div class="form-group">
         <%= f.label :画像 %>
         <%= f.file_field :image%>
       </div>
       
       <div class="form-group">
         <%= f.label :お花・植物の種類（記入は自由です。） %>
         <%= f.text_area :kind, class: 'form-control' %>
       </div>
       
       <div class="form-group">
         <%= f.label :内容（記入は自由です。） %>
         <%= f.text_area :description, class: 'form-control' %>
       </div>
       
       <% if logged_in? %>
         <%= f.submit "投稿", class: "btn btn-primary" %>
       <% end %>
          
     <% end %>
   </div>        
  </div>
</div>
